@model IEnumerable<NoteApp.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-success">Create new expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped table-hover" style="width:100%; height:auto">
            <thead class="thead-dark">
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Expense name
                    </th>
                    <th>
                        Expense price
                    </th>
                    <th>
                        Edit
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="10%">@expense.Id</td>
                        <td width="20%">@expense.ExpenseName</td>
                        <td width="40%">@expense.ExpensePrice</td>
                        <td width="30%">
                            <div class="w-100 btn-group"role="group">
                                <a asp-controller="Expense" asp-action="UpdateGet" asp-route-Id="@expense.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Expense" asp-action="DeleteGet" asp-route-Id="@expense.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Expenses found</p>
    }
</div>