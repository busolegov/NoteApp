
@model IEnumerable<NoteApp.Models.Note>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список заметок</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Note" asp-action="Create" class="btn btn-success">Создать новую заметку</a> 
        </div>
    </div>
    <br />

    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped table-hover" style="width:100%; height:auto">
            <thead class="thead-dark">
                <tr>
                    <th>
                    #
                    </th>
                    <th>
                    Заголовок заметки
                    </th>
                    <th>
                    Текст заметки
                    </th>
                    <th>
                    Изменить
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var note in Model)
	            {
                <tr>
                    <td width="10%">@note.Id</td>
                    <td width="20%">@note.NoteName</td>
                    <td width="40%">@note.NoteText</td>
                    <td width="30%">
                        <div class="w-100 btn-group"role="group">
                            <a asp-controller="Note" asp-action="Update" asp-route-Id="@note.Id" class="btn btn-primary mx-1">Изменить</a>
                            <a asp-controller="Note" asp-action="DeleteGet" asp-route-Id="@note.Id" class="btn btn-danger mx-1">Удалить</a>
                        </div>
                    </td>
                </tr>
	            }
            </tbody>
        </table>
    }
    else
    {
        <p>Не найдено заметок</p>
    }
</div>

